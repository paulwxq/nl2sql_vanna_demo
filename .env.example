# .env.example
# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nl2sql_demo
DB_USER=postgres
DB_PASSWORD=your_password

# LLM配置
LLM_PROVIDER=deepseek  # 或 qwen
LLM_API_URI=https://your-llm-api-uri.com/v1
LLM_API_KEY=your_llm_api_key
LLM_MODEL=your-model-name
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# Embedding配置
EMBEDDING_PROVIDER=aliyun
EMBEDDING_API_URI=https://your-embedding-api-uri.com/v1
EMBEDDING_API_KEY=your_embedding_api_key
EMBEDDING_MODEL=your-embedding-model

# Vanna配置
VANNA_COLLECTION=nl2sql_demo
VANNA_PERSIST_DIR=data/vanna_store

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/nl2sql_demo.log

# 安全配置
MAX_QUERY_TIME=30